#:kivy 1.10.0


<HomeScreen@Screen>:
    name: 'home_screen'
    patients: patient_list
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        BoxLayout:
            size_hint: None, None
            size: dp(500), dp(30)
            Label:
                text: app.patient_hid
                text_size: self.size
                halign: 'left'
                bold: True
                font_size: 50
        BoxLayout:
            size_hint: None, None
            size: 290, 100
            size: dp(200), dp(50)
            Button:
                background_normal: ''
                background_color: yellow
                color: 0, 0, 0, 1
                text: '+ Add New Patient'
                on_press: app.create_patient()
                bold: True
        Label:
            size_hint: None, None
            width: 400
            text: 'Available Patients' if len(app.patients)>0 else 'No patients... Add one!'
            text_size: self.size
            halign: 'left'
            bold: True
        PatientList:
            id: patient_list
            viewclass: 'PatientView'
            size_hint: 1, 0.90
            RecycleBoxLayout:
                spacing: 25
                size_hint: 1, 1
                default_size: None, dp(56)
                default_size_hint: 1.0, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

