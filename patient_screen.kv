#:kivy 1.10.0


<PatientScreen@Screen>:
    name: 'patient_screen'
    scans: scan_list
    description: description
    gender: gender
    age: age
    on_enter:
        self.description.text = app.patient['description']
        self.gender.text = app.patient['gender']
        self.age.text = app.patient['age']
        self.description.focus = True
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        Label:
            size_hint: None, None
            size: 500, 50
            text: app.patient_hid
            text_size: self.size
            halign: 'left'
            bold: True
            font_size: 50
        BoxLayout:
            size_hint: None, None
            spacing: 20
            Button:
                size_hint: None, None
                size: 280, 100
                background_normal: ''
                background_color: dark_blue
                text: 'All Patients'
                on_press: app.root.current = 'home_screen'
                bold: True
            Button:
                size_hint: None, None
                size: 280, 100
                text: '+ New Scan'
                background_normal: ''
                background_color: yellow
                color: 0,0,0,1
                bold: True
                on_press:
                    app.create_scan()
        BoxLayout:
            spacing: 20
            size_hint: 1, None
            height: 100
            TextInput:
                id: description
                padding: 20
                size_hint: 0.6, None
                hint_text: 'Description'
                multiline: False
                write_tab: False
                on_text_validate:
                    pkg = {}
                    pkg['description'] = description.text
                    pkg['age'] = age.text
                    pkg['gender'] = gender.text
                    app.update_patient(pkg)
            TextInput:
                id: gender
                size_hint: 0.2, None
                hint_text: 'Gender'
                multiline: False
                write_tab: False
                on_text_validate:
                    pkg = {}
                    pkg['description'] = description.text
                    pkg['age'] = age.text
                    pkg['gender'] = gender.text
                    app.update_patient(pkg)
            TextInput:
                id: age
                size_hint: 0.2, None
                hint_text: 'Age'
                multiline: False
                write_tab: False
                on_text_validate:
                    pkg = {}
                    pkg['description'] = description.text
                    pkg['age'] = age.text
                    pkg['gender'] = gender.text
                    app.update_patient(pkg)
        Label:
            size_hint: None, None
            width: 300
            text: 'Available Scans' if len(app.scans)>0 else 'No Scan Available'
            text_size: self.size
            halign: 'left'
            bold: True
        ScanList:
            id: scan_list
            viewclass: 'ScanView'
            size_hint: 1, 0.90
            RecycleBoxLayout:
                spacing: 25
                size_hint: 1, 1
                default_size: None, dp(56)
                default_size_hint: 1.0, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

